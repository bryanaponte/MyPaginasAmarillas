<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activies.DetailCompanyActivity">

    <ImageView
        android:id="@+id/picture_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/fullname_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Juan Salazar"/>

    <TextView
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        tools:text="jsalazar@gmail.com"/>


    <ImageButton
        android:id="@+id/callbutton"
        android:layout_width="90dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:srcCompat="@android:drawable/ic_menu_call" />

    <ImageButton
        android:id="@+id/messagebutton"
        android:layout_width="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="120dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <ImageButton
        android:id="@+id/compartirbutton"
        android:layout_width="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="120dp"
        android:layout_height="wrap_content"
        android:background="@color/boton1"
        app:srcCompat="@android:drawable/ic_menu_share" />

    <ImageButton
        android:id="@+id/webbutton"
        android:layout_width="90dp"
        android:layout_marginStart="120dp"
        android:layout_height="wrap_content"
        android:background="@color/boton2"
        app:srcCompat="@android:drawable/ic_menu_myplaces" />

</LinearLayout>